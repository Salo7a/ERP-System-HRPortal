    <!-- Toasts -->
    <% include partials/toasts.ejs %>

    <!-- Main js -->
    <script type="text/javascript" src="/js/main.js"></script>

    <script>
        let VerifyInput = () =>{
            let valid = true;
            $("#ContactForm input").each(function() {
                if(!$(this).parent().hasClass("is-valid")) {
                    valid = false;
                    $(this).trigger("blur");
                }
            });
            $("#ContactForm textarea").each(function() {
                if(!$(this).parent().hasClass("is-valid")) {
                    valid = false;
                    $(this).trigger("blur");
                }
            });
            return valid;}
        let FormSubmit = ()=> {$('#ContactForm').ajaxSubmit({
            before:  VerifyInput,
            success: (res) =>{
                $("#ContactForm")[0].reset();
                $("#ContactForm input").each(function() {
                    if($(this).parent().hasClass("is-valid")) {
                        $(this).parent().removeClass("is-valid")
                    }
                });
                $("#ContactForm textarea").each(function() {
                    if($(this).parent().hasClass("is-valid")) {
                        $(this).parent().removeClass("is-valid")
                    }
                });
                toastr.success(res.msg);
            }
        });}
        FormSubmit();
        $(document).on('submit','#ContactForm',function(){
            console.log("Submit");
            FormSubmit();
            return false;
        });
    </script>

