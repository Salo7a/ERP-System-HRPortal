<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">#<%= workshop.id %> -
        <%= workshop.Name %>
    </h5>
    <button type="button" class="close" data-dismiss="modal"
            aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form method="post" class="editWorkshop">
    <div class="modal-body">
        <input type="hidden" name="id" value="<%= workshop.id %>">
        <div class="form-group">
            <label for="team">Team</label>
            <select class="custom-select form-control" name="team" id="team"
                    required>
                <option class="hidden" selected disabled value="">Select The Team</option>
                <% teams.forEach(team =>{ %>
                <option <% if(team.id === workshop.Team.id){ %>selected <%}%> value="<%=team.id%>"><%=team.Name%></option>
                <%}) %>
            </select>
        </div>
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" id="Name" class="form-control" name="Name" value="<%= workshop.Name %>">
        </div>
        <div class="form-group row">
            <label class="col-6" for="visible">Visible In Form:</label>
            <input checked type="checkbox" <%if (workshop.isVisible === "1") {%>checked <%}%> name="visible" id="visible" data-bootstrap-switch data-off-color="danger" data-on-color="success">
        </div>
        <div class="form-group row">
            <label class="col-6" for="technical">Technical Workshop:</label>
            <input class="check" type="checkbox" <%if (workshop.isTechnical === "1") {%>checked <%}%> name="technical" id="technical" data-bootstrap-switch data-off-color="danger" data-on-color="success">
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary"
                data-dismiss="modal">Cancel
        </button>
        <input type="submit" value="Save"
               class="btn btn-outline-success">
    </div>
</form>