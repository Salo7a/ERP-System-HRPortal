<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">#<%= app.id %> -
        <%= app.Name %>
    </h5>
    <button type="button" class="close" data-dismiss="modal"
            aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form method="post" class="editApplicant">
    <div class="modal-body">

        <input type="hidden" name="id" value="<%= app.id %>">
        <label>State</label>
        <div class="form-group">


            <select class="form-control" name="State">
                <option
                <% if (app.State === "Applied"){ %> selected
                        <% } %>
                >Applied
                </option>
                <option
                <% if (app.State === "Called"){ %> selected
                        <% } %>
                >Called
                </option>
                <option
                <% if (app.State === "Interviewed"){ %> selected
                        <% } %>
                >Interviewed
                </option>
                <option
                <% if (app.State === "Pending"){ %> selected
                        <% } %>
                >Pending
                </option>
                <option
                <% if (app.State === "Accepted"){ %> selected
                        <% } %>
                >Accepted
                </option>
                <option
                <% if (app.State === "Rejected"){ %> selected
                        <% } %>
                >Rejected
                </option>
            </select>
        </div>
        <div class="form-group">
            <label>Interview Date</label>
            <input type="date" class="form-control" name="IDate"
                   value="<%= app.IDate %>">
        </div>
        <div class="form-group">
            <label>Interview Date</label>
            <input type="Time" class="form-control" name="ITime"
                   value="<%= app.ITime %>">
        </div>
        <div class="form-group">
            <label>Arrival Time</label>
            <input type="Time" class="form-control" name="ATime"
                   value="<%= app.ATime %>">

        </div>
        <div class="form-group">
            <label>Notes</label>
            <textarea name="Notes" class="form-control"
                      placeholder="Notes"
                      cols="30" rows="10"><%= app.Notes %></textarea>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary"
                data-dismiss="modal">Cancel
        </button>
        <input type="submit" value="Save"
               class="btn btn-outline-success">
    </div>
</form>