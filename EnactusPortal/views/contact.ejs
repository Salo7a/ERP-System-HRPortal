    </header>

    <!-- Page Header Banner-->
    <section class="inner-page-banner">
        <div class="opacity">
            <div class="container">
                <h2>Contact Us</h2>
            </div>
        </div>
    </section>

    <section style="margin-bottom: 20px" id="contact-section">
        <div class="container send-message">
            <form id="ContactForm" method="post">
                <div class="box">
                    <div class="row">
                        <div class="small-12 medium-12 large-12">
                            <h4>Leave us a message</h4>
                        </div>
                    </div>

                    <div class="row">
                        <div class="columns small-12 medium-12 large-12">
                            <div class="relative input-wrap is-required">
                                <input id="fullName" type="text" name="name" placeholder="Full Name *">

                                <span class="icon validation small success hide">
									<span class="fa fa-check"></span>
								</span>
                                <span class="icon validation small error hide">
									<span class="fa fa-remove"></span>
								</span>
                            </div>
                            <div class="is-helpful" data-helper="Enter your full name."
                                 data-error="Please enter your full name."></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-12 medium-12 large-12">
                            <div class="columns">
                                <div class="small-12 medium-12 large-12">
                                    <div class="relative input-wrap is-required">
                                        <input id="email" type="email" name="email" placeholder="Email *">

                                        <span class="icon validation small success hide">
											<span class="fa fa-check"></span>
										</span>
                                        <span class="icon validation small error hide">
											<span class="fa fa-remove"></span>
										</span>
                                    </div>
                                    <div class="is-helpful" data-helper="Enter your email."
                                         data-error="Please enter your email."></div>
                                </div>
                            </div>
                        </div><!-- /columns -->
                    </div>
                    <div class="row">
                        <div class="columns small-12 medium-12 large-12">
                            <div class="relative input-wrap is-required">
                                <input id="Subject" type="text" name="subject" placeholder="Subject *">

                                <span class="icon validation small success hide">
									<span class="fa fa-check"></span>
								</span>
                                <span class="icon validation small error hide">
									<span class="fa fa-remove"></span>
								</span>
                            </div>
                            <div class="is-helpful" data-helper="Enter your message's subject."
                                 data-error="Please enter your message's subject."></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="columns">
                            <div class="small-12 medium-12 large-12">
                                <label for="Message">Message</label>
                                <div class="relative input-wrap is-required">
                                    <textarea id="Message" name="message" placeholder="Your Message"></textarea>
                                    <span class="icon validation small success hide">
										<span class="fa fa-check"></span>
									</span>
                                    <span class="icon validation small error hide">
										<span class="fa fa-remove"></span>
									</span>
                                </div>
                                <div class="is-helpful" data-helper="Please enter a message"></div>
                            </div>
                        </div><!-- /columns -->
                    </div>
                    <div class="row">
                        <div class="columns" style="text-align: center">
                            <div class="small-12 medium-12 large-12">
                                <button type="submit" class="btn hvr-bounce-to-right"
                                        style="margin-left: auto; margin-right: auto; font-size: 18px; border-radius: 2px; border-width: 2px;">
                                    Send
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </section>


